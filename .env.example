ASSIGNMENT_CATEGORYCOL=2
ASSIGNMENT_CONCEPTSCOL=2
ASSIGNMENT_CONCEPTSROW=1
ASSIGNMENT_MAXPOINTSROW=3
ASSIGNMENT_MAXPOINTSCOL=2

#BINS INFO
BINS_DBINDEX=1
BINS_WORKSHEET=1
BINS_START_ROW=51
BINS_END_ROW=61
BINS_POINTS_COL=0
BINS_GRADES_COL=1

