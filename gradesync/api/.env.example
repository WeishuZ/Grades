# ============================================================================
# GradeSync API Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env to version control!

# ----------------------------------------------------------------------------
# Google Sheets Configuration
# ----------------------------------------------------------------------------
# Google Service Account JSON credentials (entire JSON as a string)
# Get this from Google Cloud Console: APIs & Services > Credentials
SERVICE_ACCOUNT_CREDENTIALS='{"type": "service_account", "project_id": "your-project-id", "private_key_id": "...", "private_key": "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n", "client_email": "your-service-account@your-project.iam.gserviceaccount.com", "client_id": "...", "auth_uri": "https://accounts.google.com/o/oauth2/auth", "token_uri": "https://oauth2.googleapis.com/token", "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs", "client_x509_cert_url": "..."}'

# ----------------------------------------------------------------------------
# Gradescope Configuration
# ----------------------------------------------------------------------------
# Your Gradescope account credentials (instructor/TA account)
GRADESCOPE_EMAIL=your_email@berkeley.edu
GRADESCOPE_PASSWORD=your_gradescope_password

# ----------------------------------------------------------------------------
# PrairieLearn Configuration
# ----------------------------------------------------------------------------
# PrairieLearn API token
# Get this from PrairieLearn: Settings > API Tokens
PL_API_TOKEN=your_prairielearn_api_token_here

# ----------------------------------------------------------------------------
# iClicker Configuration
# ----------------------------------------------------------------------------
# Your iClicker instructor account credentials
ICLICKER_USERNAME=your_iclicker_username
ICLICKER_PASSWORD=your_iclicker_password

# ----------------------------------------------------------------------------
# Database Configuration (Optional - for PostgreSQL storage)
# ----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gradesync

# Alternative: Use individual components
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=gradesync
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres

# ----------------------------------------------------------------------------
# API Configuration (Optional)
# ----------------------------------------------------------------------------
# API Server host and port
API_HOST=0.0.0.0
API_PORT=8000

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable development mode (auto-reload on code changes)
DEV_MODE=true

# ----------------------------------------------------------------------------
# Security Configuration (Optional)
# ----------------------------------------------------------------------------
# Secret key for session encryption (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_generate_a_random_32_byte_hex_string

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ----------------------------------------------------------------------------
# External Services (Optional)
# ----------------------------------------------------------------------------
# Redis URL (if using Redis for caching)
# REDIS_URL=redis://localhost:6379/0

# Sentry DSN (if using Sentry for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ----------------------------------------------------------------------------
# Notes:
# ----------------------------------------------------------------------------
# 1. All credentials should be kept secret and never committed to git
# 2. The SERVICE_ACCOUNT_CREDENTIALS must be a single-line JSON string
# 3. Make sure the service account has access to your Google Sheets
# 4. Database URL is optional - only needed if storing grades in PostgreSQL
# 5. You can use either DATABASE_URL or individual POSTGRES_* variables
