API_PORT=8000
PROGRESS_REPORT_PORT=8080
REVERSE_PROXY_LISTEN=0.0.0.0:80
REACT_APP_PROXY_SERVER="http://api:${API_PORT}"
REACT_APP_PORT=3000
REDIS_DB_SECRET=your_redis_password
ENVIRONMENT=docker

# --- from api/.env ---
# get from google cloud console, create a service account with sheets read access and generate a key
SERVICE_ACCOUNT_CREDENTIALS='{"type":"service_account","project_id":"your-project","private_key_id":"your_key_id","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"service-account@your-project.iam.gserviceaccount.com","client_id":"your_client_id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/service-account%40your-project.iam.gserviceaccount.com","universe_domain":"googleapis.com"}'

# Updated database URL with encoded password and correct host
GRADESYNC_DATABASE_URL=postgresql://user:password@host:5432/gradesync

# or if connecting via TCP:
# POSTGRES_HOST=your_db_host
# POSTGRES_PORT=5432
# POSTGRES_DB=gradesync
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_db_password

# INSTANCE_CONNECTION_NAME is only needed if connecting via Cloud SQL Proxy
# get this from your Google Cloud Console, format is usually project:region:instance
INSTANCE_CONNECTION_NAME=project:region:instance

# --- from dbcron/.env ---
SERVER_HOST=redis
SERVER_PORT=6379
REDIS_URL=redis://:your_redis_password@redis:6379
SERVER_DBINDEX=0
SPREADSHEET_ID=your_spreadsheet_id
